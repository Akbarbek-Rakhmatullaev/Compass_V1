<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_Degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <ImageView
        android:id="@+id/imageView_Static"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Degree"
        app:srcCompat="@drawable/compass_main_part" />

    <ImageView
        android:id="@+id/imageView_Dynamic"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginStart="280dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_Static"
        app:layout_constraintEnd_toEndOf="@+id/imageView_Static"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="@+id/imageView_Static"
        app:layout_constraintTop_toTopOf="@+id/imageView_Static"
        app:layout_constraintVertical_bias="0.516"
        app:srcCompat="@drawable/angle_degree_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>